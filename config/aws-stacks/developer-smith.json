{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "vpc": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "EnableDnsSupport": true,
        "EnableDnsHostnames": true,
        "CidrBlock": "172.31.0.0/16",
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith"
          }
        ]
      }
    },
    "gateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith"
          }
        ]
      }
    },
    "attachgateway": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {
          "Ref": "vpc"
        },
        "InternetGatewayId": {
          "Ref": "gateway"
        }
      }
    },
    "subnet1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": "us-east-1a",
        "VpcId": {
          "Ref": "vpc"
        },
        "CidrBlock": "172.31.0.0/20",
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith-1"
          }
        ]
      }
    },
    "subnet2": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": "us-east-1c",
        "VpcId": {
          "Ref": "vpc"
        },
        "CidrBlock": "172.31.16.0/20",
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith-2"
          }
        ]
      }
    },
    "RouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "vpc"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith"
          }
        ]
      }
    },
    "Route": {
      "Type": "AWS::EC2::Route",
      "DependsOn": "attachgateway",
      "Properties": {
        "RouteTableId": {
          "Ref": "RouteTable"
        },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": {
          "Ref": "gateway"
        }
      }
    },
    "SubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "subnet1"
        },
        "RouteTableId": {
          "Ref": "RouteTable"
        }
      }
    },
    "NetworkAcl": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {
          "Ref": "vpc"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith"
          }
        ]
      }
    },
    "InboundHTTPNetworkAclEntry": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "allow",
        "Egress": "false",
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "0",
          "To": "65535"
        }
      }
    },
    "OutBoundHTTPNetworkAclEntry": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "allow",
        "Egress": "true",
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "0",
          "To": "65535"
        }
      }
    },
    "SubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "subnet1"
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Enable Access to Rails application via port 80, 443, 3000 and SSH access via port 22",
        "VpcId": {
          "Ref": "vpc"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "443",
            "ToPort": "443",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith"
          }
        ]
      }
    },
    "SecurityGroupIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "IpProtocol": "-1",
        "FromPort": "0",
        "ToPort": "65535",
        "SourceSecurityGroupId": {
          "Fn::GetAtt": [
            "SecurityGroup",
            "GroupId"
          ]
        },
        "GroupId": {
          "Fn::GetAtt": [
            "SecurityGroup",
            "GroupId"
          ]
        }
      }
    },
    "RDS": {
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "AllocatedStorage": "50",
        "AllowMajorVersionUpgrade": true,
        "AutoMinorVersionUpgrade": true,
        "BackupRetentionPeriod": "2",
        "DBInstanceClass": "db.t2.micro",
        "VPCSecurityGroups": [
          {
            "Ref": "SecurityGroup"
          }
        ],
        "Engine": "postgres",
        "DBName": "railsapp",
        "MasterUsername": "railsapp",
        "MasterUserPassword": "5aed99058d873716ebec7111b2e679dc",
        "MultiAZ": false,
        "PubliclyAccessible": false,
        "DBSubnetGroupName": {
          "Ref": "RDSSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith"
          }
        ]
      }
    },
    "RDSSubnet": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "developer-smith",
        "SubnetIds": [
          {
            "Ref": "subnet1"
          },
          {
            "Ref": "subnet2"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith"
          }
        ]
      }
    },
    "developerec2": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": [
        "attachgateway"
      ],
      "Properties": {
        "KeyName": "developer-smith",
        "InstanceType": "t2.micro",
        "SubnetId": {
          "Ref": "subnet1"
        },
        "SecurityGroupIds": [
          {
            "Ref": "SecurityGroup"
          }
        ],
        "ImageId": "ami-9a562df2",
        "Tags": [
          {
            "Key": "Name",
            "Value": "developer-smith"
          }
        ]
      }
    },
    "developerec2eip": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc"
      }
    },
    "developerec2eipassoc": {
      "Type": "AWS::EC2::EIPAssociation",
      "Properties": {
        "AllocationId": {
          "Fn::GetAtt": [
            "developerec2eip",
            "AllocationId"
          ]
        },
        "InstanceId": {
          "Ref": "developerec2"
        }
      }
    },
    "developerdns": {
      "Type": "AWS::Route53::RecordSetGroup",
      "DependsOn": [
        "developerec2eipassoc"
      ],
      "Properties": {
        "HostedZoneName": "brickworksoftware.com.",
        "Comment": "Subdomain records for ec2 access and development.",
        "RecordSets": [
          {
            "Name": "smith.brickworksoftware.com.",
            "Type": "CNAME",
            "TTL": "60",
            "ResourceRecords": [
              {
                "Fn::GetAtt": [
                  "developerec2",
                  "PublicDnsName"
                ]
              }
            ]
          },
          {
            "Name": "mail.smith.brickworksoftware.com.",
            "Type": "CNAME",
            "TTL": "60",
            "ResourceRecords": [
              "smith.brickworksoftware.com"
            ]
          }
        ]
      }
    }
  }
}
